<div class="users-follow-users">
  <% users.each do |user| %>
  <div class="info">
    <div class="head d-flex justify-content-center">
    <div class="name">
      <h4 class="mx-3"><%= link_to user.name, user_path(user.id) %></h4>
    </div>
    <% unless user.id == current_user.id %>
    <div class="form">
      <%= render 'follow_form', user: user %>
    </div>
    <% end %>
  </div>
    <div class="profile">
      <p><%= user.profile %></p>
    </div>
  </div>
  <% end %>
</div>
