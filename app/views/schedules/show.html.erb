<div class="schedules-show">
  <div class="container">
  <div class="row">
    <div class="schedule-show-contents col-sm-5">
    <div class="user row">
        <% if @schedule.user.icon.present? %>
          <%= image_tag @schedule.user.icon, class: "schedule-show-icon"%>
        <% else %>
          <%= image_tag asset_path("usericon.png"), class: "schedule-show-icon" %>
        <% end %>
      <p class="col-sm-8 text-left">作成者 : <%= link_to @user.name, user_path(@user.id) %></p>
    </div>
    <div class="schedules-show-title">
      <p><%= @schedule.title %></p>
    </div>
    <div class="schedules-show-plan">
      <table>
        <thead>
          <tr>
            <th>予定</th>
            <th></th>
            <th>開始時間</th>
            <th></th>
            <th>終了時間</th>
          </tr>
        </thead>
        <tbody>
          <% @schedule.schedule_plans.each do |schedule_plan| %>
            <tr>
              <td><%= schedule_plan.plan %></td>
              <td>:</td>
              <td><%= schedule_plan.start_time.strftime("%H : %M") %></td>
              <td>〜</td>
              <td><%= schedule_plan.end_time.strftime("%H : %M") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="schedules-show-content">
      <p><%= @schedule.content %></p>
    </div>
  </div>

  <div class="schedules-show-charts col-sm-7">
    <%= render 'chart' %>

    <div id="favorite_btn" class="schedules-show-favorite">
      <%= render partial: 'favorite_btn', locals: { schedule: @schedule } %>
    </div>
    <div id="schedule_choise_btn" class="schedules-show-choise">
    <% if current_user.schedule_id == @schedule.id %>
      <p class="btn btn-info disabled">選択中</p>
    <% else %>
      <%= link_to '選ぶ', schedule_choise_user_path(id: @schedule.id), method: :patch, class: 'btn btn-info' %>
    <% end %>
    </div>
  </div>
  </div>
</div>

  <div class="schedules-show-comments text-center">
    <%= render partial: 'comments/form', locals: { comment: @comment, schedule: @schedule } %>
  <div id="comments_area">
    <%= render partial: 'comments/index', locals: { comments: @comments, schedule: @schedule } %>
  </div>
</div>
</div>
