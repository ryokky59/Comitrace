<% unless schedule.user_id == current_user.id %>
<% if @favorite.present? %>
<%= link_to '', favorite_path(id: @favorite.id), method: :delete, remote: true, class: 'fa fa-heart heart-red fa-3x' %>

<% else %>
<%= link_to '', favorites_path(schedule_id: @schedule.id), method: :post, remote: true, class: 'fa fa-heart-o heart-red fa-3x' %>

<% end %>
<% end %>
